<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tailntales.customer">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_tailntales"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_tailntales"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".feature.splash.SplashActivity"></activity>
        <activity android:name=".feature.login.LoginActivity"></activity>
        <activity android:name=".feature.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>