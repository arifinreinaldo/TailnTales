<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".feature.fragment.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="@dimen/_78sdp"
                android:layout_height="@dimen/_74sdp"
                android:layout_marginLeft="@dimen/_29sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:src="@drawable/ic_tailntales" />

            <ImageView
                android:id="@+id/ivSetting"
                android:layout_width="@dimen/_34sdp"
                android:layout_height="@dimen/_34sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_44sdp"
                android:layout_marginRight="@dimen/_34sdp"
                android:src="@drawable/ic_settings" />

            <TextView
                android:id="@+id/tvGreetings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivIcon"
                android:layout_marginLeft="@dimen/_36sdp"
                android:layout_marginTop="@dimen/_26sdp"
                android:textSize="@dimen/_14sdp"
                tools:text="Hohohoh" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvGreetings"
                android:layout_marginLeft="@dimen/_36sdp"
                android:textSize="@dimen/_14sdp"
                tools:text="Hohohoh" />
            
        </RelativeLayout>
    </ScrollView>
</LinearLayout>